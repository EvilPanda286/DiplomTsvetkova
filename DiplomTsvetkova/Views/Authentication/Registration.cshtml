<div class="card">
    <div class="card-header">
        <h4>Форма регистрации</h4>
    </div>
    <div class="card-body">
      <form>
        <div class="form-group">
            <label for="username">Логин</label>
            <input id="username" class="form-control"/>
        </div>
         <div class="form-group">
            <label for="password">Пароль</label>
            <input id="password" class="form-control" type="password" />
        </div>
         <div class="form-group">
            <label for="age">Заполните данные о себе</label>
            <div style="display:flex;">
               Имя: <input id="name" class="form-control"/>
               Фамилия: <input id="surname" class="form-control"/>
               Отчество: <input id="patronymic" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="age">Введите координаты своего место-положения</label>
            <div style="display:flex;">
               Долгота: <input id="latitude" class="form-control" type="number"/>
               Ширина: <input id="longitude" class="form-control ml-3" type="number"/>
            </div>
        </div>
         <div class="form-group">
            <label for="numberPhone">Номер телефона</label>
            <input id="numberPhone" class="form-control" />
        </div>
        <div class="form-group">
            <label for="address">Адрес</label>
            <input id="address" class="form-control" />
        </div>
        <div class="mt-3">
            <button class="btn btn-dark" type="submit">Создать аккаунт</button>
            <a href="/Authentication/Login" class="btn btn-primary">У меня уже есть аккаунт</a>
        </div>
        </form>
    </div>
</div>